- var link_class= ['nav-link']
- var link_class_active = ['nav-link',"active"]

style.
    .cart-icon {
        color: white;
        text-decoration: none;
        position: relative;
        display: inline-block;
    }

    .cart-icon .cart-badge {
        font-size: 12px;
        height: 15px;
        width: 15px;
        text-align: center;
        position: absolute;
        border-radius: 80%;
        background: red;
        color: white;
    }
    .navbar .active{
    color: white;
    }

    .navbar .nav-link {
        color: #d5d5d7;
    }
    .navbar a{
        list-style: none;
        margin-left: 0;
    }
    .navbar a:hover{
        color: #ffffff;

    }
    #mainNav{
        top: 0;
        position:absolute;
        z-index: 1000;
    }

    /*#mainNavOnScroll*/
    #mainNavOnScroll{
        transition: top 0.3s;
        top: -63px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 120px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
        transform: translateX(-70%);
    }

    .dropdown:hover .dropdown-content {
        display: block;
        margin-top: 2px;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }
    .dropdown-content a:hover{
        color: #5a5a5a;
    }

nav#mainNav.navbar.navbar-expand-md.w-100
    .container-fluid.d-flex.justify-content-between
        a.navbar-brand.js-scroll-trigger.logo(href='#page-top') LOGO
        .collapse.navbar-collapse
            ul.navbar-nav.m-auto
                li.nav-item
                    a(class= `${title}` === "Trang chủ" ? link_class_active:link_class href='/')
                        | Trang chủ
                li.nav-item
                    a(class= `${title}` === "Thực đơn" ? link_class_active:link_class href='/menu') Thực đơn
                li.nav-item
                    a(class= `${title}` === "Blog" ? link_class_active:link_class href='/blog') Blog
                li.nav-item
                    a(class= `${title}` === "Liên hệ" ? link_class_active:link_class href='/contact') Liên hệ
        ul.navbar-nav
                li.nav-item
                    a.cart-icon(class= `${title}` === "Giỏ hàng" ? link_class_active:link_class href='/cart')
                                i(aria-hidden="true").bi.bi-bag

                                span(class= ("cart_count" in session && session.cart_count > 0)?["cart-badge"]:[]).cart-count.label.label-primary
                                    if "cart_count" in session && session.cart_count > 0
                                        | #{session.cart_count}
                                    else
                li
                    //TODO Change state if is authenticated
                    .cart-icon.account.dropdown(class= `${title}` === "Tài khoản" ? link_class_active: link_class href='/register')
                        i(aria-hidden="true").bi.bi-person
                        .dropdown-content
                            if session && !session.isAuthenticated
                                a(href="/register" style="color:black") Đăng ký
                                a(href="/log-in" style="color:black") Đăng nhập
                            else
                                a(href="/account/profile" style="color:black") Cá nhân
                                a(href="/log-out" style="color:black") Đăng xuất

