extends admin_base


block content
    h2.mb-4.mt-4 #{title}
    a(href="/admin/order/create").btn.btn-primary.mb-4 Tạo đơn hàng mới
    table(style='width=100%; min-width:500px')#order-list.display
        thead
            tr
                th STT
                th Tên người đặt
                th SĐT
                th Thời gian tạo
                th Địa chỉ
                th Trạng thái
                th

        tbody
            for order,index in orders
                tr
                    td= index + 1
                    td= order.full_name
                    td= order.phone
                    td= order.time_created
                    td= order.address
                    td= order.status
                    td
                        a(href=`/admin/order/${order.id}`) Chi tiết


    p= error

block script
    script(src='//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js')
    script.
        $(document).ready(function () {
            $('#order-list').DataTable();
        });